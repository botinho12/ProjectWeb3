@model ProjectWeb3.Models.Produto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Apagar</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.categoria.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QtdeEstoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QtdeEstoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorCusto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorCusto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destaque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destaque)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Delete" class="btn btn-outline-danger me-2"> 
            <i class="fas fa-trash me-1" a></i>Deletar
        </button> 
        <a asp-action="Index" class="btn btn-outline-primary me-2">
            <i class="fas fa-times me-1"></i>Cancelar
        </a>
    </form>
</div>
