@model ProjectWeb3.Models.Categoria

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Editar</h1>

<h4 class="mb-4">Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
           <div class="d-flex mt-4">
                <button type="submit" class="btn btn-outline-success me-2">
                    <i class="fas fa-save me-1"a></i>Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-danger me-2">
                     <i class="fas fa-cancel me-1"a></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

