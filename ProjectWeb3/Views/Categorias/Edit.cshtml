@model ProjectWeb3.Models.Categoria

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Editar</h1>

<h4 class="mb-4">Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-8 col-lg-10">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control p-2 border-dark border-2 rounded-1" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Foto" class="form-label"></label>
                        <input type="file" id="Arquivo" name="Arquivo"
                            class="form-control p-2 border-dark border-2 rounded-1" />
                    </div>
                </div>
                <div class="col-md-4 col-lg-2">
                    <label for="Preview" class="form-label">Pr√©via</label>
                    <img id="Preview" src="@Model.Foto" class="img-fluid p-2 border-dark border-2 rounded-1" />
                </div>
            </div>
            <div class="d-flex mt-4">
                <button type="submit" class="btn btn-outline-success me-2">
                    <i class="fas fa-save me-1"></i>Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-danger me-2">
                    <i class="fas fa-cancel me-1"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_validationScriptsPartial.cshtml"></partial>
    <script>
        document.querySelector("input[type='file']").addEventListener('change', function () {
            if (this.files && this.files[0]) {
                var img = document.getElementById("Preview");
                img.src = URL.createObjectURL(this.files[0]);
            }
        });
        
    </script>
}
